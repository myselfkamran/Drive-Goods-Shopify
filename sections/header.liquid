<script>
document.addEventListener('DOMContentLoaded', function () {
  const searchInput = document.querySelector('.nb-search-input2');
  const resultsContainer = document.querySelector('[data-js-search-results2]');
  const defaultResults = document.getElementById('default-search-results2');
  const overlay = document.getElementById('search-results-overlay-mobile');

  function showDefaultResults() {
    if (defaultResults) {
      resultsContainer.innerHTML = defaultResults.innerHTML;
      resultsContainer.style.display = 'block';
      overlay.style.display = 'block';
      resultsContainer.classList.add('active');
    }
  }

  function hideDefaultResults() {
    if (resultsContainer && defaultResults) {
      resultsContainer.innerHTML = '';
    }
  }

  if (searchInput) {
    searchInput.addEventListener('focus', function () {
      showDefaultResults();
    });

    searchInput.addEventListener('input', function () {
      const query = this.value.trim();

      if (query.length === 0) {
        showDefaultResults();
        return;
      }

      // Optional: Let predictive search handle results (Shopify auto-handles if enabled)
      // Or add custom AJAX call to your store's predictive search endpoint

      hideDefaultResults(); // hide default results once user starts typing
    });

    overlay.addEventListener('click', function () {
      this.style.display = 'none';
      resultsContainer.style.display = 'none';
      resultsContainer.classList.remove('active');
    });
  }
});
</script>

