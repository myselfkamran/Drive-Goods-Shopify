              <div class="search-results-container" data-js-search-results></div> 
              <style>
 .collection-title {
    font-size: 16px;
    /* font-weight: bold; */
    color: #000;
    margin: 16px;
  }

  .default-search-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 0 16px 16px;
    overflow-y: scroll;
    height: 15rem;
    scrollbar-width: none;
  }

  .search-result-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    border: none;
    padding: 0;
    align-items: center;
    background: transparent;
  }

  .search-result-item a {
    display: flex;
  }
  
  .search-result-item img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid #ddd;
    flex-shrink: 0;
    margin: 0;
  }

