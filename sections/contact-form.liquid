{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<div class="container--large container--vertical-space remove-empty-space" style="background: {{ section.settings.section_background_color }};">

  <div class="contact-form">
    <div class="contact-form__the-form">

      <{{ section.settings.seo_h_tag }} class="h4 gutter-bottom--small" style="display:block; color: {{ section.settings.section_text_color }}">{{ section.settings.heading | escape }}</{{ section.settings.seo_h_tag }}>

      {%- assign form_id = 'contact-' | append: section.id -%}
      {%- form 'contact', id: form_id, class: 'isolate' -%}

        {%- liquid 
          if form.posted_successfully?
            assign message = 'general.contact_form.success_message' | t
            render 'form-success', message: message
          elsif form.errors
            render 'form-errors', form: form
          endif
        -%}
        
        <div class="contact__fields">
          
          <div class="contact-form__row">
            <label class="visually-hidden" for="{{ form_id }}-name">{{ 'general.contact_form.name_label' | t }}</label>
            <input style="background: {{ section.settings.section_input_color }}; color: {{ section.settings.section_text_color }}" class="field__input" autocomplete="name" type="text" id="{{ form_id }}-name" name="contact[{{ 'general.contact_form.name_label' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'general.contact_form.name_label' | t }}">
          </div>

          <div class="contact-form__row">
            <label class="visually-hidden" for="{{ form_id }}-email">{{ 'general.contact_form.email_label' | t }} <span aria-hidden="true">*</span></label>
            <input
              style="background: {{ section.settings.section_input_color }}; color: {{ section.settings.section_text_color }}"
              autocomplete="email"
              type="email"
              id="{{ form_id }}-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="{{ form_id }}-email-error"
              {% endif %}
              placeholder="{{ 'general.contact_form.email_label' | t }}"
            >
          </div>
        </div>

        {%- if section.settings.show_subject -%}
          <div class="contact-form__row">
            <label class="visually-hidden" for="{{ form_id }}-subject">{{ 'general.contact_form.subject_label' | t }}</label>
            <input style="background: {{ section.settings.section_input_color }}; color: {{ section.settings.section_text_color }}" type="text" id="{{ form_id }}-subject" class="field__input" autocomplete="tel" name="contact[Subject]"  value="{% if form.subject %}{{ form.subject }}{% elsif customer %}{{ customer.subject }}{% endif %}" placeholder="{{ 'general.contact_form.subject_label' | t }}">
          </div>
        {%- endif -%}

        {%- if section.settings.show_phone -%}
          <div class="contact-form__row">
            <label class="visually-hidden" for="{{ form_id }}-phone">{{ 'general.contact_form.phone_label' | t }}</label>
            <input style="background: {{ section.settings.section_input_color }}; color: {{ section.settings.section_text_color }}" type="tel" id="{{ form_id }}-phone" class="field__input" autocomplete="tel" name="contact[{{ 'general.contact_form.phone_label' | t }}]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="{{ 'general.contact_form.phone_label' | t }}">
            
          </div>
        {%- endif -%}

        <div class="contact-form__row">
          <label class="visually-hidden" for="{{ form_id }}-body">{{ 'general.contact_form.message_label' | t }}</label>
          <textarea
            style="background: {{ section.settings.section_input_color }}; color: {{ section.settings.section_text_color }}"
            rows="10"
            id="{{ form_id }}-body"
            class="text-area field__input"
            name="contact[{{ 'general.contact_form.message_label' | t }}]"
            placeholder="{{ 'general.contact_form.message_label' | t }}"
          >{{ form.body }}</textarea>
        </div>

        <div class="contact-form__row">
          <style>
            .contact-form__row .button:not(.button--outline-hover):hover {
              background: {{ section.settings.on_hover_button_background_color }} !important; 
              border-color: {{ section.settings.on_hover_button_background_color }} !important; 
              color: {{ section.settings.on_hover_button_text_color }} !important;
            }
          </style>
          <button style="background: {{ section.settings.button_background_color }}; border-color: {{ section.settings.button_background_color }}; color: {{ section.settings.button_text_color }}" type="submit" class="button button--solid button--regular">
            {{ 'general.contact_form.submit_label' | t }}
          </button>
        </div>
        
      {%- endform -%}

    </div>

    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
      <div class="contact-form__info">
        <{{ block.settings.seo_h_tag }} class="h4 gutter-bottom--small" style="display:block">{{ block.settings.title | escape }}</{{ block.settings.seo_h_tag }}>
        <div class="element--has-border gutter--regular element--border-radius">
          {{ block.settings.content }}
        </div>
      </div>
      {%- endfor -%}
    {%- endif -%}
  </div>

</div>

{%- if section.settings.section_background_color != "rgba(0,0,0,0)" -%}
  {% style %}
    #shopify-section-{{ section.id }} .container--has-background {
      --color-background-section: {{ section.settings.section_background_color }};
    }
  {% endstyle %}
{%- endif -%}

