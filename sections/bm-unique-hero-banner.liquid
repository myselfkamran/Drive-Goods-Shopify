        font-size: {{ section.settings.bm_hero_desc_font_size }}px;
        font-weight: {{ section.settings.bm_hero_desc_font_weight }};
        line-height: {{ section.settings.bm_hero_desc_line_height }}px;
        letter-spacing: 0em;
        color: {{ section.settings.bm_hero_desc_font_color }};
        margin: 0;
        padding: 4px 0;
    }
    html body #shopify-section-{{ section.id }} .btn-area{
        padding-bottom: 20px;
    }
    html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_one,
    html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_two {
        font-family: "Readex Pro", sans-serif;
        font-size: {{ section.settings.bm_btn_text_font_size }}px;
        font-weight: {{ section.settings.bm_btn_text_font_weight }};
        line-height: {{ section.settings.bm_btn_text_line_height }}px;
        letter-spacing: 0em;
        padding-top: {{ section.settings.bm_btn_padding_top }}px;
        padding-right: {{ section.settings.bm_btn_padding_right }}px;
        padding-bottom: {{ section.settings.bm_btn_padding_bottom }}px;
        padding-left: {{ section.settings.bm_btn_padding_left }}px;
        border-radius: {{ section.settings.bm_btn_border_radius }}px;
        border: {{ section.settings.bm_btn_border }}px solid;
        transition: all 0.5s ease-in-out;
    }
    html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_one{
        border-color: {{ section.settings.bm_btn_one_border_color }}; 
        background-color: {{ section.settings.bm_btn_one_bg_color }};
        color: {{ section.settings.bm_btn_one_text_font_color }};     
    }
    html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_two{
        border-color: {{ section.settings.bm_btn_two_border_color }}; 
        background-color: {{ section.settings.bm_btn_two_bg_color }};
        color: {{ section.settings.bm_btn_two_text_font_color }};
        margin-left: 20px;
    }
    html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_one:hover,
    html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_two:hover{
        border-color: {{ section.settings.btn_both_border_hover_color }}; 
        background-color: {{ section.settings.btn_both_bg_hover_color }};
        color: {{ section.settings.btn_both_text_hover_color }};
    }
    html body #shopify-section-{{ section.id }} .bm-banner__img-area{
        width: {{ section.settings.bm_banner_right_side_width }}%;
        max-width: {{ section.settings.bm_banner_right_side_max_width }}%;
    }
    html body #shopify-section-{{ section.id }} .bm-banner__img img {
        width: 100%;
        height: 100%;
        display: block;
        border-radius: {{ section.settings.bm_banner_image_radius }}px;
    }
    /* styling start for mobile design */
    @media screen and (max-width: 767px){
        html body #shopify-section-{{ section.id }} .bm-banner-main {
            flex-direction: column-reverse;
        }
        html body #shopify-section-{{ section.id }} .bm-banner__text-area,
        html body #shopify-section-{{ section.id }} .bm-banner__img-area {
            width: 100%;
            max-width: {{ section.settings.bm_banner_both_side_max_width }}%;
        }
        html body #shopify-section-{{ section.id }} .bm-banner__text-area{
            text-align: {{ section.settings.bm_hero_content_alignment }};
            padding-top: {{ section.settings.bm_text_area_padding_top }}px;
        }
        html body #shopify-section-{{ section.id }} .btn-area{
            text-align: {{ section.settings.bm_btn_alignment }};
        }
    }
    @media screen and (max-width: 390px){
        html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_one,
        html body #shopify-section-{{ section.id }} .btn-area a.bm_btn_two{
