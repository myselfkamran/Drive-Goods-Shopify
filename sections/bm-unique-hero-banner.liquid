<div 
    class="bm-hero-banner-wrapper">
    <div class="bm-hero-banner">
        <div class="container--large bm-banner-container {% if section.settings.bm_full_width %}is-full-width{% endif %}">       
            <div class="bm-banner-main">
                <div class="bm-banner__text-area {% if section.settings.bm_full_width %}constrain-margin{% endif %}">
                    {% if section.settings.bm_hero_title != blank %}
                        <h2>{{ section.settings.bm_hero_title }}</h2>
                    {% endif %}
                    {% if section.settings.bm_hero_desc != blank %}
                        <div class="desc">
                            {{ section.settings.bm_hero_desc }}
                        </div>
                    {% endif %}
                    <div class="btn-area">
                        {% if section.settings.bm_btn_text_one != blank %}
                            <a href="{{ section.settings.bm_btn_link_one }}" class="bm_btn_one">
                                {{ section.settings.bm_btn_text_one }}
                            </a>
                        {% endif %}
                        {% if section.settings.bm_btn_text_two != blank %}
                            <a href="{{ section.settings.bm_btn_link_two }}" class="bm_btn_two">
                                {{ section.settings.bm_btn_text_two }}
                            </a>
                        {% endif %}
                    </div>
                </div>
                <div class="bm-banner__img-area {% if section.settings.bm_full_width %}is-full-option{% endif %}" >
                    {% if section.settings.bm_banner_image != blank %}
                        <div class="bm-banner__img">
                            <img src="{{ section.settings.bm_banner_image | img_url: 'master' }}" alt="{{ section.settings.bm_banner_image }}">
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>




<style>
    html body #shopify-section-{{ section.id }} .bm-hero-banner {
        {% if section.settings.bm_section_bg_img != blank %}
        background-image: url({{ section.settings.bm_section_bg_img | img_url: 'master' }});
        {% else %}
        background: {{ section.settings.section_background_color }};
        {% endif %}
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        width: 100%;
        height: 100%;
    }
    html body #shopify-section-{{ section.id }} .bm-banner-main {
        padding-top: {{ section.settings.bm_section_main_padding_top }}px;
        padding-bottom: {{ section.settings.bm_section_main_padding_bottom }}px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    html body #shopify-section-{{ section.id }} .bm-banner__text-area {
        width: {{ section.settings.bm_banner_left_side_width }}%;
        max-width: {{ section.settings.bm_banner_left_side_max_width }}%;
        text-align: {{ section.settings.bm_hero_text_content_alignment }};
    }
    html body #shopify-section-{{ section.id }} .bm-banner__text-area h2 {
        font-family: "Readex Pro", sans-serif;
        font-size: {{ section.settings.bm_hero_title_font_size }}px;
        font-weight: {{ section.settings.bm_hero_title_font_weight }};
        line-height: {{ section.settings.bm_hero_title_line_height }}px;
        letter-spacing: -0.02em;
        color: {{ section.settings.bm_hero_title_font_color }};
        margin: 0;
    }
    html body #shopify-section-{{ section.id }} .bm-banner__text-area h2 span{
        position: relative;
        z-index: 1;
    }
    {% if section.settings.heading_after_img == true %}
    html body #shopify-section-{{ section.id }} .bm-banner__text-area h2 span::after{
        content: url(https://cdn.shopify.com/s/files/1/0020/6290/9493/files/Vector_1_1.png?v=1710437106);
        position: absolute;
        top: 50%;
        right: 10px;
        z-index: -1;
    }
    {% endif %}
    html body #shopify-section-{{ section.id }} .desc{
        padding-top: {{ section.settings.bm_hero_desc_padding_top }}px;
        padding-bottom: {{ section.settings.bm_hero_desc_padding_bottom }}px;
    }
    html body #shopify-section-{{ section.id }} .desc p {
